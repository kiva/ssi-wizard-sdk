{
    "name": "@kiva/ssirius-react",
    "version": "0.0.6",
    "description": "A bundle of SSIrius UI/UX components for you to use in SSI applications",
    "main": "lib/cjs/index.js",
    "module": "lib/esm/index.js",
    "types": "lib/esm/index.d.ts",
    "scripts": {
        "test": "jest",
        "test:watch": "jest --watch",
        "prepare": "npm run build",
        "build": "npm run build:esm & npm run build:cjs",
        "build:esm": "tsc",
        "build:cjs": "tsc --module commonjs --outDir lib/cjs"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/kiva/ssi-wizard-sdk.git",
        "directory": "react-core"
    },
    "author": "Kiva Microfunds",
    "license": "https://github.com/kiva/ssi-wizard-sdk/blob/main/LICENSE",
    "bugs": {
        "url": "https://github.com/kiva/ssi-wizard-sdk/issues"
    },
    "homepage": "https://github.com/kiva/ssi-wizard-sdk#readme",
    "devDependencies": {
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.2",
        "@testing-library/react-hooks": "^7.0.2",
        "@types/jest": "^27.0.2",
        "@types/react": "^17.0.28",
        "@types/react-dom": "^17.0.9",
        "@types/uuid": "^8.3.1",
        "jest": "^27.2.5",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "ts-jest": "^27.0.5",
        "typescript": "^4.4.3"
    },
    "peerDependencies": {
        "react": "^17.0.2",
        "react-dom": "^17.0.2"
    },
    "dependencies": {
        "axios": "^0.24.0",
        "tslib": "^2.3.1",
        "uuid": "^8.3.2"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "testRegex": ".test.tsx?$",
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "json",
            "ts",
            "tsx"
        ],
        "transform": {
            "^.+\\.(t|j)sx?$": "ts-jest"
        },
        "setupFilesAfterEnv": [
            "@testing-library/jest-dom/extend-expect"
        ]
    }
}